APP_NAME=ReplyStack
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ===========================================
# DATABASE
# ===========================================
# Local development
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=replystack
DB_USERNAME=root
DB_PASSWORD=

# Railway: Use DATABASE_URL instead (auto-generated)
# DATABASE_URL=mysql://user:password@host:port/database

# ===========================================
# SESSION & CACHE
# ===========================================
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis

CACHE_STORE=redis

# ===========================================
# REDIS
# ===========================================
# Local development
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Railway: Use REDIS_URL instead (auto-generated)
# REDIS_URL=redis://default:password@host:port

# Horizon
HORIZON_PREFIX=replystack_horizon:

# Mail
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@replystack.com"
MAIL_FROM_NAME="${APP_NAME}"

# Claude API (Anthropic)
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-haiku-20240307

# Stripe
STRIPE_KEY=
STRIPE_SECRET=
STRIPE_WEBHOOK_SECRET=

# Google OAuth (Business Profile API)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI="${APP_URL}/api/oauth/google/callback"

# Facebook OAuth (Graph API)
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
FACEBOOK_REDIRECT_URI="${APP_URL}/api/oauth/facebook/callback"

# CORS - Allowed origins for extension and web app
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Sanctum
SANCTUM_STATEFUL_DOMAINS=localhost:5173,localhost:3000

# Frontend URLs
FRONTEND_URL=http://localhost:5173
EXTENSION_ID=

# Scraping (optional for dashboard review sync)
OUTSCRAPER_API_KEY=

# Stripe Products/Prices (configure after creating in Stripe)
STRIPE_PRICE_STARTER=
STRIPE_PRICE_PRO=
STRIPE_PRICE_BUSINESS=

# Rate limiting
API_RATE_LIMIT_PER_MINUTE=60
REPLY_RATE_LIMIT_PER_MINUTE=20
