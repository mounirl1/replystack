{
  "name": "@replystack/extension",
  "displayName": "ReplyStack - AI Review Replies",
  "version": "0.0.1",
  "description": "Generate AI-powered responses to customer reviews directly on any platform",
  "author": "ReplyStack",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "build:firefox": "plasmo build --target=firefox-mv3",
    "package": "plasmo package",
    "lint": "eslint . --ext .ts,.tsx"
  },
  "dependencies": {
    "@replystack/shared": "workspace:*",
    "i18next": "^25.7.3",
    "plasmo": "^0.90.5",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@plasmohq/prettier-plugin-sort-imports": "^4.0.1",
    "@types/chrome": "^0.0.287",
    "@types/node": "^20.11.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.5.0",
    "prettier": "^3.2.0",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.3.0"
  },
  "manifest": {
    "host_permissions": [
      "https://api.reply-stack.app/*",
      "https://business.google.com/*",
      "https://www.tripadvisor.com/*",
      "https://www.tripadvisor.fr/*",
      "https://www.tripadvisor.de/*",
      "https://www.tripadvisor.es/*",
      "https://www.tripadvisor.it/*",
      "https://admin.booking.com/*",
      "https://biz.yelp.com/*",
      "https://business.facebook.com/*"
    ],
    "permissions": [
      "storage",
      "activeTab",
      "alarms",
      "tabs"
    ]
  }
}
